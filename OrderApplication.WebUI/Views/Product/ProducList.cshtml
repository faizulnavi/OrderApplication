@model OrderApplication.WebUI.Models.ProductsListViewModel
@using OrderApplication.WebUI.HtmlHelpers;
@{
    ViewBag.Title = "Products";
}
@foreach (var p in Model.Products)
{
    @Html.Partial("ProductDetails", p)
}
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("ProducList", new { Page = x, category = Model.CurrentCategory }))
</div>

